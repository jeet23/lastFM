<h1>List of songs</h1>
<hr>

<table class="table table-hover">
	<tr><td><b>Song name</b></td>
	<td><b>Artist</b></td>
	<td><b>Album</b></td>
	<td><b>Duration</b></td>
	<td><b>Favorite</b></td>
	<td><b>Play now</b></td>
	</tr>

<% @songs.each do |a| %>
<tr>
<td class="success"><%= a.songname %></td>
<td class="warning"><%= a.artist %></td>
<td class="danger"> <%= a.album %></td>
<td class="info"><%= a.duration %></td>
<% if @hash[a.id] == true %>
<td class="warning"><%= link_to(image_tag("a.jpg", height: 20, weight: 20), timetable_calculate_path(foo1: a.id)) %>
	<%else%>
<td class="warning"><%= link_to(image_tag("b.png", height: 20, weight: 20), timetable_calculate_path(foo1: a.id)) %>
<% end %>	
<td class="btn-default"><%= button_to "Play", song_play_path(foo: a.id) %></td>

</tr>

<% end %>
</table>
<% else %>
<h2><em>Please login or signup</em></h2>
<% end %>
