<!DOCTYPE html>
<html>
<head>
  <title>Last3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 <script>
$(document).ready(function() {
  $.ajax('timetable/calculate');
   setInterval(function () {
         $.ajax('/timetable/calculate');
   } , 5000);          
}); 
</script>

	<header class="navbar navbar-fixed-top navbar-inverse">
      <div  class="container">
          <nav>
          <ul style="margin-top:10px" class="nav navbar-nav navbar-right">
          	<li><%= link_to "Home" , "/" %></li>
             <% if member_signed_in? %>
            
           <li><%= link_to "Recently played", list_index_path(current_member.id) %></li>
           <li><%= link_to "Most played", timetable_index_path(current_member.id) %></li>
           <li><%= link_to "Sign Out", destroy_member_session_path, :method => :delete %></li>

            	<% else %>
			<li><%= link_to "Log in", new_member_session_path %></li>
			<% end %>
          </ul>
        </nav>
      </div>
    </header>
	
<div  style="margin-top:100px" id="main-container" class="container">
      <div class="row">
        <div class="col-xs-2">
          <h3><u>LAST FM</u></h3>
        </div>
        <div  class="col-xs-10">
          <%= yield %>
        </div>
      </div>
    </div>



</body>
</html>
