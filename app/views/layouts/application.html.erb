<!DOCTYPE html>
<html>
<head>
  <title>Last3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<header class="navbar navbar-fixed-top navbar-inverse">
      <div  class="container">
          <nav>
          <ul style="margin-top:10px" class="nav navbar-nav navbar-left">
          	<li><%= link_to "Home" , "/" %></li>
             <% if member_signed_in? %>
            <li><%= link_to "Sign Out", destroy_member_session_path, :method => :delete %></li>
            	<% else %>
			<li><%= link_to "Log in", new_member_session_path %></li>
			<% end %>
          </ul>
        </nav>
      </div>
    </header>
	
<div  style="margin-top:100px" id="main-container" class="container">
      <div class="row">
        <div class="col-xs-2">
          <h3>LAST FM</h3>
        </div>
        <div  class="col-xs-10">
          <%= yield %>
        </div>
      </div>
    </div>



</body>
</html>
